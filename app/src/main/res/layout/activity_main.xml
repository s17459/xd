<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_u113"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/zapomniales_hasla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Elo grzybiarzu, zapraszamy ponownie"
            android:textColor="#333333"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/email_logowanie"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#7D7D7D"
            android:textColorHighlight="#494949"
            android:textColorHint="#7D7D7D"
            android:textColorLink="#494949"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/password_logowanie"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#7D7D7D"
            android:textColorHighlight="#494949"
            android:textColorHint="#7D7D7D"
            android:textColorLink="#494949"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Zapomniałeś hasła?"
            android:textSize="14sp" />

        <Button
            android:id="@+id/zaloguj"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/kwadrat"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp"
            android:text="Zaloguj"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Nowy tutaj? Zarejestruj się natychmiast!"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>